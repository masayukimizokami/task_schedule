<div class="main_container">
  <div class="information">
    <h2>スケジュール詳細</h2>
  </div>

  <table>
    <tr>
      <th>名前</th>
      <td><%= @scdl.title %></td>
    </tr> 
    <tr>
      <th>開始日</th>
      <td><%= l @scdl.start_day, format: :short %></td>
    </tr> 
    <tr>
      <th>投稿日時</th>
      <td><%= l @scdl.updated_at, format: :short %></td>
    </tr> 
    <tr>
      <th>終日</th>
      <td>
        <% if @scdl.all_day == true %>
        
        <% else @scdl.all_day == false %>
        <% end %>
      </td>
    </tr> 
    <tr>
      <th>スケジュールメモ</th>
      <td><%= @scdl.memo %></td>
    </tr> 
  </table>

  <div>
    <ul>
      <li><%= link_to "スケジュール一覧に戻る" ,:schedles %></li>
      <li><%= link_to "スケジュールを編集する" ,[:edit, @scdl] %></li>
      <li><%= link_to "スケジュールを削除", @scdl, method: :delete, data: {confirm: "本当に削除しますか？"} %></li>
    </ul>
  </div>
</div>